#!/bin/sh  -x

# usage: 
#
# grep_in_shell_scripts pattern
#

#problemas:
#
# no quiero que acceda /proc/kcore
#   soluciones: no dejarle entrar en kcore   (no lo consigo)
#               no le dejo salirse de ext2 como fs
#
find / \
-fstype ext2 \
-type f  \
-exec grep -l -i '^#!/.*bin/.*sh'  \{\}  \;  \
-exec echo "------------------------------------------------" ';'  \
-exec echo "" \;  \
-exec cat \{\} \;  \
-exec echo ""  \; 


